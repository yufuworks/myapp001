<div class="contents row">
  <div class="col s12 m7">
    <div class="card horizontal">
      <div class="card-image">
        <div class="content_post" style="background-image: url(<%= @poet.image %>);">
          <img src="https://lorempixel.com/100/190/nature/6">
        </div>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <span class="name"><%= @poet.user.nickname %></span>
          <p>I am a very simple card. I am good at containing small bits of information.</p>
        </div>
        <div class="card-action">
          <% if user_signed_in? && current_user.id == @poet.user_id %>
          <%= link_to '編集', "/poets/#{@poet.id}/edit", method: :get %>
          <%= link_to '削除', "/poets/#{@poet.id}", method: :delete %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <% if current_user %>
  <div class="row">
    <%= form_with(model: [@poet, Comment.new], local: true) do |f| %>
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_area :text, placeholder: "コメントする", class: "materialize-textarea", id: "textarea1" %>
          <%= f.submit "SEND" %>
        </div>
      </div>
    </form>
    <% end %>

  </div>
  <% end %>

  <% if @comments %>
  <% @comments.each do |comment| %>
  <p>
    <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
    <%= comment.text %>
  </p>
  <% end %>
  <% end %>
  